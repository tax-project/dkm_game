<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dkm.skill.dao.SkillMapper">

    <select id="queryMySkill" parameterType="java.lang.Long">
        select a.sk_img,b.sk_grade,a.sk_id from tb_skill a,tb_user_skill b  where a.sk_id=b.sk_id and b.user_id=#{userId}
    </select>

    <insert id="addSkill" parameterType="com.dkm.skill.entity.UserSkill">
        insert into tb_plant_unlock(user_id,sk_id,sk_grade,sk_result_one,sk_result_two,sk_degree_proficiency,sk_Current_success_rate,sk_star,sk_Currently_has_num,sk_Total_consumed_quantity)
        <foreach collection="list" item="lists" index="index" separator="union all">
            select #{lists.userId},#{lists.skId},#{lists.skGrade},#{lists.skResultOne},#{lists.skResultTwo},#{lists.skDegreeProficiency},
                   #{lists.skCurrentSuccessRate},#{lists.skStar},#{lists.skCurrentlyHasNum},#{lists.skTotalConsumedQuantity}
        </foreach>
    </insert>

    <insert id="addStart" parameterType="com.dkm.integral.entity.Stars">
        insert into tb_plant_unlock(s_id,user_id,s_star,s_img,s_Currently_has_num,s_Total_consumed_quantity)
        <foreach collection="starsList" item="lists" index="index" separator="union all">
            select #{lists.sId},#{lists.userId},#{lists.sStar},#{lists.sImg},#{lists.sCurrentlyHasNum},#{lists.sTotalConsumedQuantity}
        </foreach>
    </insert>

    <select id="querySkillsDetails" resultType="com.dkm.skill.entity.vo.UserSkillVo" parameterType="java.lang.Long">
        select a.sk_id,a.sk_name,a.sk_img,b.us_id,b.sk_grade,b.sk_degree_proficiency,b.sk_Current_success_rate from tb_skill a,tb_user_skill b
        where a.sk_id=b.sk_id and b.user_id=#{userId} and b.sk_id=#{skId}
    </select>


    <select id="queryUserIdStars" resultType="com.dkm.skill.entity.Stars" parameterType="java.lang.Long">
        select s_id,s_star,s_img,s_Currently_has_num,s_Total_consumed_quantity from tb_stars where user_id=#{userId}
    </select>

</mapper>
